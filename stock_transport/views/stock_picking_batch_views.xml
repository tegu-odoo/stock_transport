<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_batch_inherit_form" model="ir.ui.view">
        <field name="name">stock.picking.batch.inherit.form</field>
        <field name="model">stock.picking.batch</field>
        <field name="inherit_id" ref="stock_picking_batch.stock_picking_batch_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='scheduled_date']" position="after">
                <field name="dock_id" />
                <field name="vehicle_id" placeholder="Thid party provider"/>
                <field name="vehicle_category_id" placeholder="e.g. Semi-truck" />
                <field name="weight"/>
                <field name="progress_weight" widget="progressbar"/>
                <field name="volume"/>
                <field name="progress_volume" widget="progressbar"/>
            </xpath>
        </field>
    </record>

    <record id="stock_picking_batch_inherit_graph" model="ir.ui.view">
        <field name="name">stock.picking.batch.inherit.graph</field>
        <field name="model">stock.picking.batch</field>
        <field name="arch" type="xml">
            <graph string="" type="bar">
                <field name="scheduled_date" />
                <field name="vehicle_category_id" />
            </graph>
        </field>
    </record>

    <record id="stock_picking_batch.stock_picking_batch_action" model="ir.actions.act_window">
        <field name="name">Batch Transfers</field>
        <field name="res_model">stock.picking.batch</field>
        <field name="view_mode">tree,form,kanban,graph</field>
    </record>
</odoo>
